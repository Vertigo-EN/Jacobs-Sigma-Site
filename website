<body>
    <header>
        <button class="nav-button" onclick="loadContent('home')">Home</button>
        <button class="nav-button" onclick="loadContent('games')">Games</button>
    </header>
    <main id="content-area">
        <h1>Welcome to Game Hub!</h1>
        <p>Click on "Games" to explore and play embedded games.</p>
    </main>

    <script>
        function loadContent(page) {
            const contentArea = document.getElementById('content-area');

            if (page === 'home') {
                contentArea.innerHTML = `
                    <h1>Welcome to Game Hub!</h1>
                    <p>Click on "Games" to explore and play embedded games.</p>
                `;
            } else if (page === 'games') {
                contentArea.innerHTML = `
                    <iframe src="https://example.com/embed-game1" title="Game 1"></iframe>
                `;
            }
        }
    </script>
</body>
